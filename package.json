{
  "name": "xo-action",
  "version": "2.0.0",
  "private": true,
  "description": "GitHub Action ❤️ JavaScript happiness style linter",
  "keywords": [
    "xo",
    "code",
    "quality",
    "linter",
    "github-action"
  ],
  "license": "MIT",
  "homepage": "https://github.com/stoe/xo-action#readme",
  "author": "Stefan Stölzle <stefan@github.com> (stefan.stoelzle.me)",
  "repository": "git+ssh://git@github.com/stoe/xo-action.git",
  "bugs": {
    "url": "https://github.com/stoe/xo-action/issues"
  },
  "engines": {
    "node": ">=12.14",
    "npm": ">=6.13"
  },
  "main": "index.js",
  "scripts": {
    "test": "xo"
  },
  "dependencies": {
    "actions-toolkit": "^2.2.0",
    "xo": "^0.25.3"
  },
  "devDependencies": {
    "babel-eslint": "^10.0.3",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.9.0",
    "eslint-config-xo-space": "^0.22.0",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-github": "^3.4.0",
    "prettier": "^1.19"
  },
  "eslintConfig": {
    "env": {
      "es6": true,
      "node": true
    },
    "extends": [
      "prettier"
    ],
    "plugins": [
      "prettier",
      "plugin:github/es6",
      "plugin:github/node"
    ],
    "parser": "babel-eslint",
    "rules": {
      "camelcase": [
        "error",
        {
          "properties": "never",
          "ignoreDestructuring": true
        }
      ]
    }
  },
  "xo": {
    "prettier": true,
    "space": true,
    "semicolon": false
  }
}
